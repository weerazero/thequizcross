<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tni_it09.thequizcross.AddTitle">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:background="#ff0080"
        android:id="@+id/sereen_TITLE">

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/edit_TITLE"
            android:background="@drawable/shape__button_white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageView_TITLE"
            android:background="@drawable/shape_button_gray"
            android:layout_below="@+id/textView24"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:id="@+id/button_ADD_TITLE"
            android:background="@drawable/shape__button_white"
            android:layout_below="@+id/textView23"
            android:layout_alignLeft="@+id/imageView_TITLE"
            android:layout_alignStart="@+id/imageView_TITLE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Title"
            android:id="@+id/textView21"
            android:textColor="#ffffff"
            android:layout_below="@+id/button_delete_title"
            android:layout_alignLeft="@+id/textView20"
            android:layout_alignStart="@+id/textView20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:id="@+id/button_clear_pic"
            android:background="@drawable/shape__button_white"
            android:layout_below="@+id/textView23"
            android:layout_alignRight="@+id/imageView_TITLE"
            android:layout_alignEnd="@+id/imageView_TITLE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Delete Title"
            android:id="@+id/textView20"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView22"
            android:layout_alignLeft="@+id/textView22"
            android:layout_alignStart="@+id/textView22"
            android:textColor="#ffffff" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/spinner_title"
            android:spinnerMode="dropdown"
            android:background="@drawable/shape__button_white"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/textView20"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:touchscreenBlocksFocus="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/button_delete_title"
            android:background="@drawable/shape__button_white"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/spinner_title"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EDIT TITLE"
            android:id="@+id/textView22"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/button_back_editT"
            android:layout_toRightOf="@+id/textView28"
            android:layout_toEndOf="@+id/textView28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView23"
            android:layout_below="@+id/imageView_TITLE"
            android:layout_alignLeft="@+id/edit_TITLE"
            android:layout_alignStart="@+id/edit_TITLE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView24"
            android:layout_below="@+id/edit_TITLE"
            android:layout_alignLeft="@+id/edit_TITLE"
            android:layout_alignStart="@+id/edit_TITLE" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/button_back_editT"
            android:layout_gravity="left"
            android:background="@drawable/shape__button_white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="   "
            android:id="@+id/textView28"
            android:layout_alignTop="@+id/textView22"
            android:layout_toRightOf="@+id/button_back_editT"
            android:layout_toEndOf="@+id/button_back_editT" />

    </RelativeLayout>
</FrameLayout>
